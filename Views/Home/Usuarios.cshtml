@model IQueryable<UsandoViews.Models.Usuario>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<h1 class="text-primary">Usuários</h1>
<hr>
<p>
    Bem Vindo ao ASP.NET Core 5!
</p>
<a href="/Home/Cadastrar" class="btn btn-primary">Novo Usuário</a>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.Email</td>
                <td>
                    <!-- 
                        btn = Estilizado como botão
                        btn-m = Botão pequeno
                        btn-secondary = Botão cinza
                    -->
                    <a asp-action="Cadastrar" asp-route-id="@u.IdUsuario" class="btn btn-sm btn-secondary">Alterar</a>
                    <a asp-action="Excluir" asp-route-id="@u.IdUsuario" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>
