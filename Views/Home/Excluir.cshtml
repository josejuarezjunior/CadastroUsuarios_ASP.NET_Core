@model UsandoViews.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <title>Exclusão de Usuário</title>
</head>
<body>
    <div class="container">
        <h1 class="text-primary">Exclusão de Usuário</h1>
        <hr>
        <h4 class="mt-3">
            <form method="post" class="w-25">
                <input type="hidden" asp-for="IdUsuario">
                <div class="mt-3">
                    <a href="/Home/Usuarios" class="btn btn-success">Não</a>
                    <button class="btn btn-danger" type="submit">Sim</button>
                </div>
            </form>
        </h4>
    </div>
</body>
</html>